<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LatoRegular" parent="@android:style/Widget.TextView">
        <item name="android:layout_gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RobotoBold" parent="@android:style/Widget.TextView">
        <item name="android:layout_gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/new_yellow</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RobotoRegular" parent="@android:style/Widget.TextView">
        <item name="android:layout_gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/bluey_grey</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>